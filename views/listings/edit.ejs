<% layout("/layouts/boilerplate") %>
<div class="row new-row">
  <div class="col-6 offset-3">
  <body>
    <h3>Add Salary/Expense Details</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="Type" class="form-label">Type</label>
      <input
        name="listing[Type]"
        value="<%= listing.Type %>"
        type="text"
        class="form-control"
        required
        />
        <div class="invalid-feedback">type should be valid</div>
      </div>
      <div class="mb-3">
      <label for="price" class="form-label">Amount</label>
      <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
      <div class="invalid-feedback">Number should be valid</div>
      </div>
      <Div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </Div>
      <br /><br />
      <button class="btn btn-dark offset btn-edit-page">Edit</button>
    </form>
</div>
  </body>
  </div>
</div>

